<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/products_list_view_item_container"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginLeft="@dimen/margin_5dp"
    android:layout_marginRight="@dimen/margin_5dp"
    custom:cardElevation="@dimen/margin_3dp"
    custom:cardCornerRadius="0dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/products_list_view_item_img"
            android:src="@drawable/placeholder"
            >
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/products_list_view_item_txt_container"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/products_list_view_item_img"
            >
            <com.sample.shopapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checked Shirts"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:textColor="@color/textColor"
                android:id="@+id/products_list_view_item_name"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_18sp"
                custom:typeface="roboto_light.ttf"
                >
            </com.sample.shopapp.views.CustomFontTextView>

            <include
                android:id="@+id/products_list_view_item_rating_container"
                layout="@layout/rating_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/products_list_view_item_name"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                >
            </include>

            <com.sample.shopapp.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 2699"
                android:id="@+id/products_list_view_item_price"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textColor="@color/googleYellow"
                android:layout_below="@id/products_list_view_item_rating_container"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_16sp"
                custom:typeface="roboto_regular.ttf"
                >
            </com.sample.shopapp.views.CustomFontTextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wishlist_icon"
                android:layout_marginTop="@dimen/margin_10dp"
                android:id="@+id/products_list_view_item_wishlist_img"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_alignParentRight="true"
                >
            </ImageView>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>


