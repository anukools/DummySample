<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cards_list_view_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.sample.shopapp.views.CustomFontTextView
        android:id="@+id/cards_list_view_item_cc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISA"
        android:layout_marginLeft="@dimen/margin_25dp"
        custom:typeface="roboto_regular.ttf"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/textColor"
        >
    </com.sample.shopapp.views.CustomFontTextView>

    <com.sample.shopapp.views.CustomFontTextView
        android:id="@+id/cards_list_view_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="**** **** **** 1111"
        android:layout_marginLeft="@dimen/margin_25dp"
        custom:typeface="roboto_light.ttf"
        android:layout_toRightOf="@id/cards_list_view_item_cc_type"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="@dimen/text_size_15sp"
        >
    </com.sample.shopapp.views.CustomFontTextView>

    <com.sample.shopapp.views.CustomFontTextView
        android:id="@+id/cards_list_view_item_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25dp"
        custom:typeface="roboto_regular.ttf"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:text="Exp."
        android:layout_below="@id/cards_list_view_item_cc_type"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/textColor"
        >
    </com.sample.shopapp.views.CustomFontTextView>

    <com.sample.shopapp.views.CustomFontTextView
        android:id="@+id/cards_list_view_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/2016"
        android:layout_marginLeft="@dimen/margin_25dp"
        custom:typeface="roboto_light.ttf"
        android:layout_toRightOf="@id/cards_list_view_item_exp"
        android:layout_below="@id/cards_list_view_item_number"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textSize="@dimen/text_size_15sp"
        >
    </com.sample.shopapp.views.CustomFontTextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cards_list_view_item_option"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_item_option_icon"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            >
        </ImageView>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cards_list_view_item_selected"
        android:src="@drawable/tick"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_below="@id/cards_list_view_item_option"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"/>
</RelativeLayout>