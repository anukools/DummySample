<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="170dp"
    android:id="@+id/dashboard_product_item_container"
    android:background="@android:color/white"
    android:layout_margin="@dimen/margin_5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/dashboard_product_item_img"/>
    <com.sample.shopapp.views.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboard_product_item_img"
        android:id="@+id/dashboard_product_item_txt"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:textSize="@dimen/text_size_10sp"
        custom:typeface="roboto_light.ttf"
        android:text="Checked Shirts"/>
    <com.sample.shopapp.views.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard_product_item_price"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_below="@id/dashboard_product_item_txt"
        android:layout_marginTop="@dimen/margin_2dp"
        android:textColor="@color/googleYellow"
        android:textSize="@dimen/text_size_12sp"
        custom:typeface="roboto_regular.ttf"
        android:text="Rs 1999"/>
</RelativeLayout>