<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.FiltersFragment"
    android:background="@android:color/white"
    >
    <!-- Tab bar -->
    <RelativeLayout
        android:id="@+id/fragment_filters_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_bar_height"
        android:background="@color/googleBlue"
        android:orientation="horizontal"
        >
        <com.balysv.materialmenu.MaterialMenuView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_filters_tab_bar_back_img"
            android:layout_centerVertical="true"
            custom:mm_color="@android:color/white"
            android:layout_marginLeft="@dimen/margin_5dp"
            custom:mm_transformDuration="500"
            custom:mm_strokeWidth="2"
            custom:mm_scale="1" />

        <com.sample.shopapp.views.CustomFontTextView
            android:id="@+id/fragment_filters_tab_bar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters"
            android:layout_toRightOf="@id/fragment_filters_tab_bar_back_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@android:color/white"
            custom:typeface="roboto_light.ttf"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_filters_tab_bar"
        android:id="@+id/fragment_filters_scroll_view"
        android:overScrollMode="never"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/fragment_filters_scroll_view_child_container">

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/fragment_filters_btn_container"
        android:layout_alignParentBottom="true"
        android:background="@drawable/filters_button_container"
        android:orientation="horizontal">

        <com.sample.shopapp.views.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/filters_clear_button"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:text="@string/clear_filters"
            android:textAllCaps="true"
            android:textColor="@color/googleYellow"
            android:gravity="center"
            android:textSize="@dimen/text_size_13sp"
            android:id="@+id/fragment_filters_clear_btn"
            custom:typeface="roboto_regular.ttf"/>
        <com.sample.shopapp.views.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/filters_apply_button"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="@string/apply"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/text_size_13sp"
            android:id="@+id/fragment_filters_apply_btn"
            custom:typeface="roboto_regular.ttf"/>
    </LinearLayout>

</RelativeLayout>
